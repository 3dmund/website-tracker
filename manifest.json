{
  "name": "Abacus",
  "version": "1.0",
  "description": "Keep track of how often you visit distracting websites and waste less time on them!",
  "permissions":
  ["activeTab",
    "declarativeContent",
    "storage",
    "notifications",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
    // "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/abacus-logo16.png",
      "32": "images/abacus-logo32.png",
      "48": "images/abacus-logo48.png",
      "128": "images/abacus-logo128.png"
    }
  },
  "icons": {
    "16": "images/abacus-logo16.png",
    "32": "images/abacus-logo32.png",
    "48": "images/abacus-logo48.png",
    "128": "images/abacus-logo128.png"
  },
  "manifest_version": 2
}
